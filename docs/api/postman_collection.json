{
  "info": {
    "name": "Neo N3 Service Layer API",
    "description": "Collection for testing the Neo N3 Service Layer API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Verify Signature",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/verify",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"address\": \"NXxx...xxxx\",\n  \"message\": \"Login to Neo Service Layer at {{timestamp}}\",\n  \"signature\": \"0x...\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Functions",
      "item": [
        {
          "name": "List Functions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/functions?page=1&limit=10&status=active",
              "host": ["{{baseUrl}}"],
              "path": ["functions"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "active"
                }
              ]
            }
          }
        },
        {
          "name": "Create Function",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/functions",
              "host": ["{{baseUrl}}"],
              "path": ["functions"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"price_alert\",\n  \"description\": \"NEO price alert function\",\n  \"runtime\": \"javascript\",\n  \"code\": \"function handler(context, event) { ... }\",\n  \"environment\": {\n    \"ALERT_THRESHOLD\": \"100\"\n  }\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Triggers",
      "item": [
        {
          "name": "List Triggers",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/triggers?page=1&limit=10&status=active&type=schedule",
              "host": ["{{baseUrl}}"],
              "path": ["triggers"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "active"
                },
                {
                  "key": "type",
                  "value": "schedule"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Gas Bank",
      "item": [
        {
          "name": "Get Gas Balance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/gas/balance",
              "host": ["{{baseUrl}}"],
              "path": ["gas", "balance"]
            }
          }
        },
        {
          "name": "Request Gas",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/gas/request",
              "host": ["{{baseUrl}}"],
              "path": ["gas", "request"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": \"100000\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Price Feed",
      "item": [
        {
          "name": "Get Current Price",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/prices/NEO%2FUSD",
              "host": ["{{baseUrl}}"],
              "path": ["prices", "NEO%2FUSD"]
            }
          }
        }
      ]
    },
    {
      "name": "Secrets",
      "item": [
        {
          "name": "List Secrets",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/secrets",
              "host": ["{{baseUrl}}"],
              "path": ["secrets"]
            }
          }
        },
        {
          "name": "Create Secret",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/secrets",
              "host": ["{{baseUrl}}"],
              "path": ["secrets"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"api_key\",\n  \"value\": \"secret_value\",\n  \"description\": \"API key for external service\"\n}"
            }
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "pm.environment.set('timestamp', new Date().toISOString());"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://api.neo-service-layer.io/v1",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "your_jwt_token_here",
      "type": "string"
    }
  ]
} 