{
  "name": "nep17-transfer-monitor",
  "description": "Triggers token transfer monitor on Transfer events",
  "type": "contract_event",
  "contract": "0x43cf4863eb7d1148a0b7d833a4acd2e432748334",
  "event": "Transfer",
  "function": "token-transfer-monitor",
  "enabled": true,
  "filters": {
    "amount": {
      "min": "1000000000"
    }
  },
  "retryPolicy": {
    "maxAttempts": 3,
    "initialDelay": "30s",
    "maxDelay": "2m",
    "backoffMultiplier": 2
  }
}